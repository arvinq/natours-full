//- mixins are reusable code that we can pass arguments into
mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.user.name}`)
            h6.reviews__user= review.user.name
        p.reviews__text= review.review
        .reviews__rating
            each starNum in [1, 2, 3, 4, 5]
                //- if the rating given is higher than the star's number, then active else inactive
                - const starActive = review.rating >= starNum ? 'active':'inactive'
                svg.reviews__star(class=`reviews__star--${starActive}`)
                    use(xlink:href='/img/icons.svg#icon-star')